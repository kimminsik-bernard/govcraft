= form_for @following_issue do |f|
  .form-group
    = f.text_field :issue_title, placeholder: '관심이슈', class: 'form-control input-lg'
  .form-group
    = f.submit '추가하기', class: 'btn btn-primary btn-lg', data: { disable_with: "진행 중..." }

= content_for :script do
  :javascript
    $(document).ready(function() {
      $('#following_issue_issue_title').focus();
    });
