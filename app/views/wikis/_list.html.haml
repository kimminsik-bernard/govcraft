%section#wikis
  .container
    .panel.panel-primary
      .panel-heading
        .row
          .col-xs-6
            %h4.panel-title
              = Wiki.model_name.human
          .col-xs-6.text-right
            = link_to "#{Wiki.model_name.human} 추가", new_campaign_wiki_path(@campaign), style: 'color: #fff; text-decoration: underline;' if @campaign.present?

      - if wikis.any?
        %table.table
          %thead
            %tr
              %th.text-center #
              %th 제목
              %th 최근편집
              %th.text-right 편집
              %th.text-right 조회
              %th.text-center.hidden-xs 작성일
          %tbody
            - wikis.each do |wiki|
              %tr[wiki]
                %td.text-muted.text-center
                  = wiki.id
                %td.wiki__title
                  %strong= link_to wiki.title, wiki
                %td.wiki__nickname
                  = wiki.wiki_revisions.last.user.nickname
                %td.wiki__cnt.text-right.text-primary
                  %strong= wiki.wiki_revisions.count
                %td.wiki__cnt.text-right
                  = wiki.views_count
                %td.wiki__created_at.text-center.hidden-xs
                  = date_f wiki.created_at
      - else
        .panel-body
          %small.text-muted
            첫 위키 페이지를 작성해 보세요.
            %br
            = link_to "#{Wiki.model_name.human} 추가하기", new_campaign_wiki_path(@campaign)