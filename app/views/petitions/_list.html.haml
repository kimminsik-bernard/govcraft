%section#petitions.page-block
  .container
    %h4
      = Petition.model_name.human
      %small
        = link_to "제안하기", new_campaign_petition_path(@campaign) if @campaign.present?
    .panel.panel-default
      - if petitions.any?
        %ul.list-group.post-group
          - petitions.each do |petition|
            %li.list-group-item[petition]
              = link_to petition do
                .post__campaign= petition.campaign.title
                %h5.list-group-item-heading
                  = petition.title

                .post__meta
                  .row
                    .col-xs-6
                      %span.nickname
                        = petition.user.nickname
                      %span.created_at
                        = date_f petition.created_at
                    .col-xs-6.text-right
                      %span.text-danger
                        %strong
                          #{petition.percentage}% 달성
                      %span
                        %i.fa.fa-user-o
                        = petition.signs_count
                      %span
                        %i.fa.fa-eye
                        = petition.views_count


      - else
        - if @campaign.present?
          .panel-body
            %small.text-muted
              가장 먼저 서명을 제안해 보세요.
              %br
              = link_to "#{Petition.model_name.human} 제안하기", new_campaign_petition_path(@campaign)
