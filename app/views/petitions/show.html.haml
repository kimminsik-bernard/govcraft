.container

  %ol.breadcrumb
    %li= link_to @campaign.title, @campaign

  %h2= @petition.title

  %div
    = simple_format @petition.body

  %div
    = link_to '수정', edit_petition_path(@petition), class: 'btn btn-primary'
    = link_to '삭제', @petition, method: :delete, data: { confirm: '삭제하시겠습니까?' }, class: 'btn btn-primary'