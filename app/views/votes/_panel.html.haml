%div
  - Vote.choice.values.each do |choice|
    = link_to polymorphic_url([choice.value, :votes], poll_id: poll.id), method: :post do
      #{choice.text}
      = poll.send("#{choice.value}s_count")
  - if poll.voted_by?(current_user)
    = link_to '취소', cancel_votes_path(poll_id: poll.id), method: :post
