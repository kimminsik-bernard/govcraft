%section
  .container
    - if params[:controller] == 'users'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to User.model_name.human, issues_path

    - if params[:controller] == 'issues'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Issue.model_name.human, issues_path

    - if params[:controller] == 'campaigns'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Campaign.model_name.human, campaigns_path

    - if params[:controller] == 'discussions'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Campaign.model_name.human, campaigns_path
        %li= link_to @campaign.title, @campaign

    - if params[:controller] == 'petitions'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Campaign.model_name.human, campaigns_path
        %li= link_to @campaign.title, @campaign

    - if params[:controller] == 'polls'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Campaign.model_name.human, campaigns_path
        %li= link_to @campaign.title, @campaign

    - if params[:controller] == 'archives'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Archive.model_name.human, archives_path

    - if params[:controller] == 'archive_documents' && params[:action] == 'show'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Archive.model_name.human, archives_path
        %li= link_to @archive.title, @archive

    - if params[:controller] == 'memorials'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Memorial.model_name.human, memorials_path

    - if params[:controller] == 'agendas'
      %ol.breadcrumb{ style: 'font-size: 12px;' }
        %li= link_to Agenda.model_name.human, memorials_path

