%section#archive-header-block
  .container
    .jumbotron{ style: "background-image: url(#{@archive.image_url(:lg)})" }
      %h2
        %small.badge 아카이브
        %br
        = @archive.title
        %small
          - if can? :edit, @archive
            = link_to '수정', edit_campaign_path(@archive)
          - if can? :destroy, @archive
            = link_to '삭제', @archive, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }
      %p= simple_format @archive.body

%section.page-block
  .container
    %h4 자료

    .row.hidden
      .col-xs-6
        = link_to '자료 추가하기', new_archive_document_path(archive_id: @archive.id), class: 'btn btn-default btn-sm'

    %ul.list-unstyled.hidden
      - @archive.documents.each do |document|
        %li[document]
          .text-muted
            = document.date
            = document.time
          %h5= link_to document.title, document