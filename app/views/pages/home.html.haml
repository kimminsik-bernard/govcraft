%section#site-hero-block
  .container
    .jumbotron
      - if Event.first.present?
        - event = Event.first
        = link_to event do
          %h2= event.title
          = raw event.body
        %p= link_to '지금 참여하기', event, class: 'btn btn-primary btn-lg'

%section.page-block
  .container
    %h4 진행중인 캠페인
    .row.masonry-container
      - @campaigns.each do |campaign|
        .col-sm-4
          = render campaign

%section.page-block
  .container
    %h4 새로 올라온 글

    .row
      .col-sm-6
        .panel.panel-default
          .panel-body
            %h5.panel-title #{Discussion.model_name.human}
            %ul.list-unstyled
              - Discussion.recent.limit(5).each do |discussion|
                %li
                  %h5
                    = link_to discussion.title, discussion
                    %small.text-muted
                      (#{discussion.comments.count})

      .col-sm-6
        .panel.panel-default
          .panel-body
            %h5.panel-title #{Poll.model_name.human}
            %ul.list-unstyled
              - Poll.recent.limit(5).each do |poll|
                %li
                  %h5
                    = link_to poll.title, poll
                    %small.text-muted
                      %i.fa.fa-check-square-o
                      = poll.votes_count
    .row
      .col-sm-6
        .panel.panel-default
          .panel-body
            %h5.panel-title #{Petition.model_name.human}
            %ul.list-unstyled
              - Petition.recent.limit(5).each do |petition|
                %li
                  %h5
                    = link_to petition.title, petition
                    %small.text-muted
                      %i.fa.fa-user-o
                      = petition.signs_count
      .col-sm-6
        .panel.panel-default
          .panel-body
            %h5.panel-title #{Wiki.model_name.human}
            %ul.list-unstyled
              - Wiki.recent.limit(5).each do |wiki|
                %li
                  %h5
                    = link_to wiki.title, wiki
                    %small.text-muted
                      %i.fa.fa-edit
                      = wiki.wiki_revisions.count

    .row
      .col-sm-6
        .panel.panel-default
          .panel-body
            %h5.panel-title #{Archive.model_name.human}
            %ul.list-unstyled
              - ArchiveDocument.recent.limit(5).each do |document|
                %li
                  %h5
                    #{link_to document.archive.title, document.archive}
                    \-
                    = link_to document.title, document

      .col-sm-6
        .panel.panel-default
          .panel-body
            %h5.panel-title #{Memorial.model_name.human}
            %ul.list-unstyled
              - Memorial.recent.limit(5).each do |memorial|
                - url = memorial.url.present? ? memorial.url : memorial_path(memorial)
                %li
                  %h5
                    = link_to memorial.title, url

%section.page-block{ style: 'background-color: #f5f5f5; padding: 28px 0;' }
  .container
    %h4
      당원
      %small
        %i.fa.fa-user-o
        = User.count
    - User.all.each do |user|
      = link_to user do
        .img-user{style: "background-image: url(#{user.image.sm.url});"}