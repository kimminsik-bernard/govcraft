.container

  %ol.breadcrumb
    %li= link_to @campaign.title, @campaign

  %h2= @memorial.title

  %div
    = simple_format @memorial.body

  %div
    = link_to '수정', edit_memorial_path(@memorial), class: 'btn btn-primary'
    = link_to '삭제', @memorial, method: :delete, data: { confirm: '삭제하시겠습니까?' }, class: 'btn btn-primary'