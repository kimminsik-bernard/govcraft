.panel.panel-floating[campaign]
  .panel-body
    - if campaign.image.file.present?
      = link_to campaign.title, campaign, style: "display: block; height: 150px; background-image: url(#{campaign.image_url(:md)}); background-size: cover; background-position: center center; text-indent: -999px; overflow: hidden;"

    %h5{ style: 'word-break: keep-all;' }= link_to campaign.title, campaign

    .campaign__meta{ style: 'margin-top: 14px;' }
      - if campaign.discussions.count > 0
        %small{ style: 'margin-right: 7px;' }
          = Discussion.model_name.human
          = link_to campaign.discussions.count, campaign_discussions_path(campaign)

      - if campaign.petitions.count > 0
        %small{ style: 'margin-right: 7px;' }
          = Petition.model_name.human
          = link_to campaign.petitions.count, campaign_petitions_path(campaign)

      - if campaign.polls.count > 0
        %small{ style: 'margin-right: 7px;' }
          = Poll.model_name.human
          = link_to campaign.polls.count, campaign_polls_path(campaign)

      - if campaign.wikis.count > 0
        %small{ style: 'margin-right: 7px;' }
          = Wiki.model_name.human
          = link_to campaign.wikis.count, campaign_wikis_path(campaign)
