.panel.panel-default.panel-floating[campaign]
  .panel-body
    = link_to campaign.title, campaign, style: "display: block; height: 150px; background-image: url(#{campaign.image_url(:md)}); background-size: cover; background-position: center center; text-indent: -999px; overflow: hidden;"

    %h5{ style: 'height: 45px; word-break: keep-all;' }= link_to campaign.title, campaign

    .campaign__meta{ style: 'height: 20px; margin-top: 7px;' }
      %small.text-muted
        제안자 :
        = image_tag campaign.user.image.sm, class: 'user-thumb-sm'
        = campaign.user.nickname
