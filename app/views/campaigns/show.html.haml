%section
  .container
    %h2= @campaign.title

    %div
      = simple_format @campaign.body

    %div
      = link_to '수정', edit_campaign_path(@campaign), class: 'btn btn-primary'
      = link_to '삭제', @campaign, method: :delete, data: { confirm: '삭제하시겠습니까?' }, class: 'btn btn-primary'

    %hr

    %div
      %h3 청원
      = link_to '청원 만들기', new_campaign_petition_path(@campaign), class: 'btn btn-primary'
      = render @campaign.petitions